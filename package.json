{
  "name": "camelot-web",
  "version": "0.1.0",
  "private": true,
  "description": "A web app for the classic game Camelot",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npx convex dev\" \"next dev --turbopack\"",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "typecheck:tests": "cd lib/engine && tsc -p tsconfig.test.json --noEmit",
    "lint": "next lint",
    "test:engine": "cd lib/engine && NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test": "npm run typecheck && npm run typecheck:tests && next build && npm run test:engine && npm run format && npm run lint",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NickHeiner/camelot-engine"
  },
  "keywords": [
    "game",
    "camelot"
  ],
  "author": "Nick Heiner <nth23@cornell.edu>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/NickHeiner/camelot-engine/issues"
  },
  "homepage": "https://github.com/NickHeiner/camelot-engine",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@tailwindcss/postcss": "^4",
    "@tsconfig/node20": "^20.1.5",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.17",
    "@types/node": "^22.15.21",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.27.0",
    "eslint-config-next": "^15.4.0-canary.51",
    "eslint-config-nth": "^2.0.1",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "^4",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.20.0",
    "concurrently": "^9.1.2",
    "convex": "^1.24.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.522.0",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testMatch": [
      "**/test/**/*.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": {
            "allowJs": true,
            "esModuleInterop": true
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  }
}
